# Control Plane Configuration
MESHGATE_ENV=development
DB_PATH=./data/meshgate-dev.db
PORT=8080
LOG_LEVEL=debug
JWT_SECRET=dev-jwt-secret-change-in-production

# Optional TLS (uncomment to enable HTTPS in development)
# TLS_CERT_FILE=./certs/server.crt
# TLS_KEY_FILE=./certs/server.key

# Development flags
RESET_DB_ON_START=false
ENABLE_DEBUG_ROUTES=true
CORS_ENABLED=true

# Agent Configuration (for local agent testing)
MESHGATE_CONTROL_PLANE_URL=http://localhost:8080
MESHGATE_NODE_NAME=dev-local-agent
MESHGATE_TENANT_ID=dev-tenant
MESHGATE_AUTH_TOKEN=dev-token
MESHGATE_INTERFACE=wg-meshgate-dev
MESHGATE_LISTEN_PORT=51821
MESHGATE_METRICS_PORT=9102